<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:a="urn:import:uk.co.unclealex.rokta.client.ui">

  <ui:style type='uk.co.unclealex.rokta.client.views.League.Style'>
    .header { font-weight: bold; }
    .notPlaying { color: gray; }
    .exempt { color : blue; }
    .movementImage { vertical-align: middle; }
    .league td {
			vertical-align: middle;
			text-align: right;
			padding: 5px 5px 5px 5px;
			border-bottom: 1px solid green;
		}
		.league {
			border-collapse: collapse;
			margin-top: 50px;
			margin-left: 50px;
		}
  </ui:style>

	<g:HTMLPanel>
		<g:Label ui:field="exemptPlayer"/>
		<g:Grid ui:field="league" addStyleNames="{style.league}">
			
		</g:Grid>
	</g:HTMLPanel>
</ui:UiBinder>