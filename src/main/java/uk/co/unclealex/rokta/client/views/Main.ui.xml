<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:a="urn:import:uk.co.unclealex.rokta.client.ui">

	<ui:style>
		.navExtension {
			position: absolute;
			left: 0px;
			top: 0px;
			width: 180px;
			height: 70px;
			background: #eeeeee;
			z-index: -1;
		}
	</ui:style>
	
	<a:HidingDockLayoutPanel ui:field="dock" hidingDuration="1000">
		<a:north size="70">
			<g:HTMLPanel>
				<div class="{style.navExtension}"/>
				<g:SimplePanel ui:field="authenticationPanel"/>
				<g:SimplePanel ui:field="titlePanel"/>
			</g:HTMLPanel>
		</a:north>
		<a:west size="180">
		  <g:SimpleLayoutPanel ui:field="navigationPanel"/>		
		</a:west>
		<a:east size="300">
			<g:SimpleLayoutPanel ui:field="newsPanel"/>
		</a:east>
		<a:center>
			<g:SimpleLayoutPanel ui:field="mainPanel"/>
		</a:center>
	</a:HidingDockLayoutPanel>
</ui:UiBinder>