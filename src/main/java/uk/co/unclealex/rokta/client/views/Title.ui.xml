<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style type="uk.co.unclealex.rokta.client.views.Title.Style">
		.titleBanner {
			background-color: #6699CC;
			color: white;
			width: 100%;
			height: 100%;
			font-family: sans-serif;
			font-size: x-large;
			font-weight: bold;
			vertical-align: middle;
			position: relative;
		}
		
		.hiding {
			visibility: hidden;
		}
		
		.waitingImage {
			float: right;
			display: inline;
			/* position: absolute;
			right: 50px */;
		}
	</ui:style>

	<g:HTMLPanel addStyleNames="{style.titleBanner}">
		<g:InlineLabel ui:field="mainTitle"/>
		<div class="{style.waitingImage}">
			<g:Image ui:field="waitingImage" addStyleNames="{style.hiding}"/>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>