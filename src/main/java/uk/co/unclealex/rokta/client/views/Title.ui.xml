<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style type="uk.co.unclealex.rokta.client.views.Title.Style">
		.titleBanner {
			background-color: #6699CC;
			color: white;
			width: 100%;
			height: 100%;
			font-family: sans-serif;
			font-size: x-large;
			font-weight: bold;
			vertical-align: middle;
		}
		
		.titleBanner div {
			vertical-align: middle;
			display: inline;
		}
		
		.titleBanner img {
			vertical-align: middle;
			float: right;
		}		
		
		.hidingStyle {
			visibility: hidden;
		}
	</ui:style>

	<g:HTMLPanel addStyleNames="{style.titleBanner}">
		<g:Label ui:field="mainTitle"/>
		<g:Image ui:field="waitingImage" addStyleNames="{style.hidingStyle}"/>
	</g:HTMLPanel>
</ui:UiBinder>