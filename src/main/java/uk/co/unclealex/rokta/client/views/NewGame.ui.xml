<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client">

	<ui:style src="Game.css">
		.players {
			padding: 2px;
			border: 1px solid black;
		}

		.entry, .selectBox select {
			margin-left: 5em;
			width: 10em;
		}
	</ui:style>

	<g:HTMLPanel>
		<h2>Please choose your players</h2>
		<p><g:InlineLabel ui:field="exemptPlayer"/></p>
		<fieldset class="{style.selectBox}">
			<h3>Instigator</h3>
			<g:ListBox ui:field="instigatorListBox" multiple="false"/>
			<h3>Players</h3>
			<c:CellList ui:field="playersListBox" addStyleNames="{style.entry} {style.players}"/>
			<g:Button ui:field="startButton">Start</g:Button>
		</fieldset>
	</g:HTMLPanel>

</ui:UiBinder>