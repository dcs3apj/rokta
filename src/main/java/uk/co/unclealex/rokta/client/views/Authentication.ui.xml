<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:a="urn:import:uk.co.unclealex.rokta.client.ui">

	<ui:style>
		.authentication {
			float: right;
			width: 100%;
		}
		.authentication div {
			display: inline;
		}
	</ui:style>
	
	<g:HTMLPanel addStyleNames="{style.authentication}">
		<g:Anchor ui:field="signIn">Sign in</g:Anchor>
		<g:Label ui:field="currentUser"/>
		<g:Anchor ui:field="signOut">Sign out</g:Anchor>
	</g:HTMLPanel>

</ui:UiBinder>