<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:a="urn:import:uk.co.unclealex.rokta.client.ui">

	<ui:style>
		.authentication {
			float: right;
			margin: 4px;
		}
		.authentication div {
			display: inline;
		}
		.styling {
			clear: both;
		}
	</ui:style>
	
	<g:HTMLPanel>
		<div class="{style.authentication}">
			<g:Anchor ui:field="signIn">Sign in</g:Anchor>
			<g:Label ui:field="currentUser"/>
			<g:Anchor ui:field="signOut">Sign out</g:Anchor>
		</div>
		<div class="{style.styling}"/>
	</g:HTMLPanel>

</ui:UiBinder>