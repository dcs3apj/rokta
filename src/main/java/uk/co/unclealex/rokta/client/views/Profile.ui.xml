<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style type="uk.co.unclealex.rokta.client.views.Profile.Style">
		.handCountContainer {
			width: 50%;
			height: 100%;
		}
		
		.full {
			width: 100%;
			height: 100%;
		}
		
		.full h2 {
			text-align: center;
		}
		
		.left {
			float: left;
		}

		.right {
			float: left;
		}
		
		.dark {
			color: white;
		}
		
		.light {
			color: black;
		}
		
		.colour {
			padding-left: 0.5em;
			padding-right: 0.5em;
		}
	</ui:style>
	
	<g:HTMLPanel addStyleNames="{style.full}">
		<div>
			<h2>
				<g:InlineLabel ui:field="colourTitle"/>
				<g:InlineLabel ui:field="colour" addStyleNames="{style.colour}"/>
			</h2>
		</div>
		<div class="{style.full}">
			<div class="{style.handCountContainer} {style.left}">
				<h1><g:Label ui:field="handCountTitle"/></h1>
				<g:SimpleLayoutPanel ui:field="handCountPanel" addStyleNames="{style.full}"/>
			</div>
			<div class="{style.handCountContainer} {style.right}">
				<h1><g:Label ui:field="openingHandCountTitle"/></h1>
				<g:SimpleLayoutPanel ui:field="openingHandCountPanel" addStyleNames="{style.full}"/>
			</div>
		</div>
	</g:HTMLPanel>

</ui:UiBinder>