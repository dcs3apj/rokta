<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:a="urn:import:uk.co.unclealex.rokta.client.ui">

	<ui:style src="Narrow.css" type="uk.co.unclealex.rokta.client.views.Admin.Style">
		a.colour {
			display: block;
			float: left;
			width: 1em;
			height: 1em;
			margin: 0.5em;
		}
		
		.dark {
			border: 1px solid black;
		}

		.light {
			border: 1px solid black;
		}

		a.colour:HOVER, a.selected {
			width: 1.5em;
			height: 1.5em;
			margin: 0.25em;
		}
	</ui:style>
	
	<g:HTMLPanel addStyleNames="{style.narrow}">
		<h2>Change colour</h2>
		<fieldset>
			<g:FlowPanel ui:field="colourListPanel"/>
			<div class="{style.buttons}">
				<g:Button ui:field="changeColourButton">Change colour</g:Button>
			</div>
		</fieldset>

		<h2>Change password</h2>
		<fieldset>
			New password: <g:PasswordTextBox ui:field="password"/>
			<div class="{style.buttons}">
				<g:Button ui:field="changePasswordButton">Change password</g:Button>
			</div>
		</fieldset>
		
		<h2>Game administration</h2>
		<fieldset>
			<div class="{style.buttons}">
				<g:Button ui:field="deleteLastGameButton">Delete last game</g:Button>
				<g:Button ui:field="clearCacheButton">Clear the server cache</g:Button>
			</div>
		</fieldset>
	</g:HTMLPanel>

</ui:UiBinder>