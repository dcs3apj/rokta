<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:a="urn:import:uk.co.unclealex.rokta.client.ui">

	<ui:style type="uk.co.unclealex.rokta.client.views.Admin.Style">
		.colourCell {
		}
		
		.dark {
			color: white;
		}
		
		.light {
			color: black;
		}
	</ui:style>
	
	<g:HTMLPanel>
		<div>
			<g:ScrollPanel>
				<g:SimplePanel ui:field="colourListPanel"/>
			</g:ScrollPanel>
			<g:Button ui:field="changeColourButton">Change colour</g:Button>
		</div>
		<div>
			<g:PasswordTextBox ui:field="password"/>
			<g:Button ui:field="changePasswordButton">Change password</g:Button>
		</div>
		<div>
			<g:Button ui:field="deleteLastGameButton">Delete last game</g:Button>
		</div>
	</g:HTMLPanel>

</ui:UiBinder>