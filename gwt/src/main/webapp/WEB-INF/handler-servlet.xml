	<bean id="urlMapping" class="org.gwtwidgets.server.spring.GWTHandler">
		<property name="mappings">
			<map>
				<entry key="/rpc">
					<bean class="uk.co.unclealex.rokta.gwt.server.GwtReadOnlyRoktaFacadeImpl"/>
				</entry>
			</map>
		</property>
		<!--
		You can specify your own class enhancer here
